<!DOCTYPE html>
<html lang="en">
  {% include 'layouts/kb5/head.njk' %}

  <body>
    {% include 'layouts/kb5/header.njk' %}
    <main>
      <div class="row">
        <div class="col">
          <div class="container mt-2">
            {% include 'layouts/kb5/tags.njk' %}

            <ul>
              {%- for post in collections.kb5 -%}
              <li>
                <a href="{{ post.url }}">{{ post.data.title }}</a>
              </li>
              {%- endfor -%}
            </ul>
            <h1>{{ title }}</h1>
            <p>
              {%- for tag in tags -%}
              <span class="badge bg-primary">{{ tag }}</span
              >&nbsp; {%- endfor -%}
            </p>

            {{ content | safe }}
          </div>
        </div>
      </div>
    </main>
    {% include 'layouts/kb5/footer.njk' %}
  </body>
</html>
